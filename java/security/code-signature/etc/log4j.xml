<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<!--
    $Id: NovaOrdisWorkEnvironmentLog4jXml.txt,v 1.2 2007/06/20 23:40:54 wiki Exp wiki $
