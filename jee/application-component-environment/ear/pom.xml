<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>io.novaordis.playground.jee.ear.war-and-ejb</groupId>
        <artifactId>root</artifactId>
        <version>1</version>
    </parent>

    <artifactId>ear</artifactId>
    <packaging>ear</packaging>

    <build>

        <finalName>war-and-ejb</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.10.1</version>
                <configuration>
                    <applicationXml>${basedir}/src/main/resources/META-INF/application.xml</applicationXml>
                    <modules>
                        <ejbModule>
                            <groupId>io.novaordis.playground.jee.ear.war-and-ejb</groupId>
                            <artifactId>ejbs</artifactId>
                            <bundleFileName>ejbs.jar</bundleFileName>
                        </ejbModule>
                        <webModule>
                            <groupId>io.novaordis.playground.jee.ear.war-and-ejb</groupId>
                            <artifactId>servlet</artifactId>
                            <bundleFileName>servlet.war</bundleFileName>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>io.novaordis.playground.jee.ear.war-and-ejb</groupId>
            <artifactId>ejbs</artifactId>
            <type>ejb</type>
            <version>1</version>
        </dependency>
        <dependency>
            <groupId>io.novaordis.playground.jee.ear.war-and-ejb</groupId>
            <artifactId>servlet</artifactId>
            <type>war</type>
            <version>1</version>
        </dependency>
    </dependencies>

</project>

